# -- Important:
#    Do not use inline comments in the config files!.
#    Included files should not contain an `[ids]` section.
#    Included files should not include other files (inclusion is non-recursive).
#    Included files should not end in `.conf`.
#
# -- Commands:
#    `sudo keyd monitor`                        - Show keyboards ids and keystrokes.
#    `sudo systemd enable/start keyd.service`   - Enable/start the service
#    `sudo keyd reload`                         - Update changes on config files.
#    `sudo journalctl -eu keyd`                 - Check for errors.


[global]

# Usefull when regret typing a modifier key, just hold it a little longer and nothing will by typed.
overload_tap_timeout = 300


# -- Edit normal layers:

[main]

# space = overload(meta, space)
# capslock = layer(control)
capslock = overload(control, capslock)
enter = overload(control, enter)
f = overload(nav, f)
; = overload(symbols, ;)
' = overload(media, ')
[ = -
# is this what is causing keyboard layouts switch?
#shift = oneshot(shift)


# [shift]
# make sure pressing both shifts work, required for accents, see hyprland input variables.
# rightshift = macro(leftshift+rightshift)
# leftshift = macro(leftshift+rightshift)


# -- Custom layers:

[nav]

# top row
u = tab
i = esc
o = backspace
p = macro(C-S-v)
[ = +
# home row
h = left
j = down
k = up
l = right
; = ~
' = `
d = layer(nav2)
# bottom row
n = enter
, = [
. = ]
/ = \


[nav2]
# top row
u = capslock
i = f2
o = delete
p = macro(C-S-tab)
# home row
h = home
j = pagedown
k = pageup
l = end
# bottom row
n = macro(C-tab)


[symbols]
# top row
q = !
w = @
e = #
r = $
t = %
# home row
capslock = ^
a = (
s = )
d = {
f = }
g = =
# bottom row
v = |
b = &


[media]
s = previoussong
d = volumeup
f = volumedown
g = nextsong
space = playpause

